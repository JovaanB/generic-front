{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb",
        "prettier"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "prettier"
    ],
    "rules": {
        "prettier/prettier": [
            "error",
            {
                "endOfLine": "auto"
            }
        ],
        "no-shadow": [
            "warn",
            {
                "builtinGlobals": false,
                "hoist": "functions",
                "allow": []
            }
        ],
        "no-unused-vars": [
            "warn",
            {
                "vars": "all",
                "args": "after-used",
                "ignoreRestSiblings": false
            }
        ],
        "no-use-before-define": [
            "warn",
            {
                "functions": true,
                "classes": true
            }
        ],
        "no-nested-ternary": "off",
        "no-underscore-dangle": "off",
        "react/prop-types": "warn",
        "react/jsx-filename-extension": [
            1,
            {
                "extensions": [
                    ".js",
                    ".jsx"
                ]
            }
        ],
        "max-len": [
            "error",
            {
                "code": 120
            }
        ],
        "react/jsx-props-no-spreading": "off",
        "react/jsx-no-bind": [
            1,
            {
                "allowArrowFunctions": true,
                "allowFunctions": true
            }
        ]
    }
}